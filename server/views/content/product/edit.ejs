<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= product._id %>" >

                <div class="form-group">
                    <label for="productNameTextField">Name</label>
                    <input type="text" class="form-control"
                        id="productNameTextField"
                        placeholder="Enter the Product Name"
                        name="name" 
                        value="<%= product.name %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="productPriceTextField">Price</label>
                    <input type="number" class="form-control"
                        id="productPriceTextField"
                        placeholder="Enter the Product Price"
                        name="price" 
                        value="<%= product.price %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="productExpiryDate">Expiry</label>
                    <input type="date" class="form-control"
                        id="productExpiryDate"
                        placeholder="Enter the Product Expiry Date"
                        name="expiry" 
                        value="<%= product.expiry %>"
                        required>
                </div>
        

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/product/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>
