<script>
    var columns = []

    var filterTable = () => {
        var filterColumns = document.getElementById("searchColumn").value
        var trs = document.querySelectorAll(`#employeeTbl tbody tr:not(:first-child)`)
        var filter = document.getElementById("searchInput").value
        var regex = new RegExp(filter, 'i')

        var find = (childrenArr) => {
            return regex.test(childrenArr.innerHTML)? true : false
        } 

        var setTr = ({ style, children }) => {
            style.display = find(children[filterColumns]) ? '' : 'none'
        }
    
        trs.forEach(setTr)
    }
</script>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-9">
            <h1>
                <%= title %>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="text-end"> <!-- New column for the button -->
            <a href="/employees/add" class="btn btn-success" role="button">
                <i class="fas fa-plus-circle"></i> Add New
            </a>
            <br><br>
        </div>
    </div>
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <select id="searchColumn">
                <option value="0">Username</option>
                <option value="1">Role</option>
                <option value="2">Created At</option>
                <option value="3">Updated At</option>
            </select>
            <input type="text" id="searchInput" placeholder="Search..." onkeyup="filterTable()">
            <table id="employeeTbl" class="table table-bordered table-striped table-hover sortable">
                
                <!-- Header Row-->
                <tr class="table-dark">
                    <th class="text-center col-2">Username</th>
                    <th class="text-center col-2">Role</th>
                    <th class="text-center col-2">Created At</th>
                    <th class="text-center col-2">Updated At</th>
                    <th class="text-center col-2"></th>
                    <th class="text-center col-2"></th>
                    <!-- Add other employee-related header columns as needed -->
                </tr>
    
                <!-- Repeatable Template Row -->
                <% for(let count=0; count < employees.length; count++) { %>
                    <tr>
                        <td class="text-center col-2">
                            <%= employees[count].username %>
                        </td>
                        <td class="text-center col-2">
                            <%= employees[count].role %>
                        </td>
                        <td class="text-center col-2">
                            <%= `${employees[count].createdAt.getFullYear()}-${(employees[count].createdAt.getMonth() + 1).toString().padStart(2, '0')}-${employees[count].createdAt.getDate().toString().padStart(2, '0')}` %>
                        </td>
                        <td class="text-center col-2">
                            <%= `${employees[count].updatedAt.getFullYear()}-${(employees[count].updatedAt.getMonth() + 1).toString().padStart(2, '0')}-${employees[count].updatedAt.getDate().toString().padStart(2, '0')}` %>
                        </td>
                        <!-- Add other employee-related columns as needed -->
                        <td class="text-center col-1">
                            <a class="btn btn-warning" href="/employees/edit/<%= employees[count]._id %>">
                                Edit
                            </a>
                        </td>
                        <td class="text-center col-1">
                            <a class="btn btn-danger" href="/employees/delete/<%= employees[count]._id %>">
                                Delete
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>
